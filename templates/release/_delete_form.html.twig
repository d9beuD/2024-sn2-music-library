<form class="list-group-item" method="post" action="{{ path('app_release_delete', {'id': release.id}) }}" onsubmit="return confirm('Are you sure you want to delete this item?');">
    <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ release.id) }}">
    <button class="bg-transparent border-0 p-0 h-100 w-100 text-start text-danger">
        <i class="fa-solid fa-trash-alt fa-fw"></i>
        Delete
    </button>
</form>
